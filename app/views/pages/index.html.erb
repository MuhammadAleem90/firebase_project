<div class="container mt-5">
	<div class="row">
		<div class="col-8 offset-2">
			<h2>Login</h2>
			<%=form_with url: login_path, local: true, method: :post do |f| %>
			<div class="mb-3">
				<%= f.label :email, class:"form_group" %>
				<%= f.text_field :email, type:"email", autofocus: "true" , class:"form_control"	%>
				
			</div>
			<div class="mb-3">
				<%= f.label :password, class:"form_group" %>
				<%= f.text_field :password, type:"password" , class:"form_control"	%>
					
			</div>
			<%= f.submit "login", class:'btn btn-primary' %>
			<% end %>

			<%= link_to "New User? create Account", signup_path %>
		</div>
	</div>
	
</div>